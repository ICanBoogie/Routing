{
	"name": "icanboogie/routing",
	"type": "library",
	"description": "Request routing.",
	"keywords": [ "routing" ],
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/Routing/issues",
		"source": "https://github.com/ICanBoogie/Routing"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"icanboogie/http": "2.x"
	},
	"autoload": {
		"psr-4": {
			"ICanBoogie\\Routing\\": "lib/"
		},

		"files": [ "helpers.php" ]
	},

	"extra": {

		"icanboogie": {

			"config-path": "config",
			"config-constructor": {

				"routes": "ICanBoogie\\Routing\\Hooks::synthesize_routes_config"

			}
		}
	}
}